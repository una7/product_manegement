.wrapper
  .background_image_3
    .main_header
      = link_to "Product managementS", root_path, class: 'top_page_link'

    .sign_up
    .sign_up__upper
      アカウントを新規登録します
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        -# %i.fas.fa-exclamation-triangle
        = f.label :Eメールアドレス, class:"email"
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class:"email_form"
      .field
        = f.label :パスワード, class:"password"
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} 文字以上)
        %br/
        = f.password_field :password, autocomplete: "new-password", class:"new-password_form"
      .field
        = f.label :パスワード再入力, class:"password"
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password", class:"new-password_form"
      .field
        = f.label :名前, class:"name"
        %br/
        = f.text_field :name, class:"name_form"
      .actions
        = f.submit "登録", class:"submit"
        
      = render "devise/shared/links"
