.wrapper
  .background_image
    .main_header
      = link_to "Product manegementS",root_path, class: 'top_page_link'
    = form_for "" do |f|
      .stock_1
        .arrival_day
          入荷日
          %input{name: "", type: "date", size: "10"}
        .successful_bid
          落札した商品名
          =f.text_field :title, class: "text_field",placeholder: "", size: "10"
        .exhibition_name
          出品名
          =f.text_field :title, class: "text_field",placeholder: "",maxlength: "" , size: "10"
        .exhibition_price
          出品価格
          =f.text_field :title, class: "text_field",placeholder: "",maxlength: "8", size: "10"
      .stock_2
        .stocking_place
          仕入先
          =f.select :place_id,Stock.all.collect { |p| [ p.place, p.id ] }, prompt: "---"
        .unit_price
          単品単価
          =f.text_field :title, class: "text_field",placeholder: "",maxlength: "", size: "10"
        .shipping_fee
          負担した送料
          =f.text_field :title, class: "text_field",placeholder: "",maxlength: "", size: "10"
        .total_price
          仕入合計
          =f.text_field :title, class: "text_field",placeholder: "",maxlength: "", size: "10"
      .button  
        = f.submit "商品登録!", class: "product_button"
